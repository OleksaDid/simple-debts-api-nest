{
  "name": "simple-debts-api",
  "version": "1.0.0",
  "description": "Nest TypeScript starter repository",
  "license": "MIT",
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "format": "prettier --write \"src/**/*.ts\"",
    "start": "ts-node -r tsconfig-paths/register src/main.ts",
    "start:dev": "concurrently --handle-input \"wait-on dist/main.js && nodemon\" \"tsc -w -p tsconfig.build.json\" ",
    "start:debug": "nodemon --config nodemon-debug.json",
    "prestart:prod": "rimraf dist && npm run build",
    "start:prod": "node dist/main.js",
    "lint": "tslint -p tsconfig.json -c tslint.json",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "NODE_ENV=local jest --config ./test/jest-e2e.json --runInBand --forceExit",
    "test:e2e-dev": "NODE_ENV=dev jest --config ./test/jest-e2e.json --runInBand --forceExit",
    "docker:dev": "docker build -t gcr.io/simple-debts-api-dev/image1 .",
    "docker:prod": "docker build -t gcr.io/simple-debts-api/image1 --build-arg NODE_ENV=prod .",
    "deploy:dev": "npm run test:e2e && cloud-build-local --substitutions _NODE_ENV=dev,_PROJECT_ID=simple-debts-api-dev --dryrun=false --push .",
    "deploy:prod": "npm run test:e2e-dev && cloud-build-local --substitutions _NODE_ENV=prod,_PROJECT_ID=simple-debts-api --dryrun=false --push ."
  },
  "dependencies": {
    "@nestjs/common": "^6.3.1",
    "@nestjs/core": "^6.3.1",
    "@nestjs/jwt": "^6.1.1",
    "@nestjs/passport": "^6.1.0",
    "@nestjs/platform-express": "^9.2.1",
    "@nestjs/swagger": "^3.0.2",
    "@sentry/node": "^5.4.3",
    "async": "^2.6.2",
    "aws-sdk": "^2.478.0",
    "bcrypt-nodejs": "0.0.3",
    "body-parser": "^1.19.0",
    "class-transformer": "^0.2.3",
    "class-validator": "^0.8.5",
    "compression": "^1.7.4",
    "connect-mongo": "^1.3.2",
    "ddos": "^0.2.1",
    "dotenv": "^2.0.0",
    "errorhandler": "^1.5.1",
    "express-validator": "^3.2.1",
    "firebase-admin": "^8.2.0",
    "helmet": "^3.18.0",
    "identicon.js": "^2.3.3",
    "iso-country-currency": "^0.5.0",
    "joi": "^14.3.1",
    "jsonwebtoken": "^8.5.1",
    "lodash": "^4.17.11",
    "mongoose": "^5.6.5",
    "nestjs-typegoose": "^5.2.1",
    "passport": "^0.3.2",
    "passport-facebook": "^2.1.1",
    "passport-facebook-token": "^3.3.0",
    "passport-jwt": "^3.0.1",
    "passport-local": "^1.0.0",
    "reflect-metadata": "^0.1.13",
    "request": "^2.88.0",
    "rxjs": "^6.3.3",
    "swagger-ui-express": "^4.0.6",
    "typegoose": "^5.8.1"
  },
  "devDependencies": {
    "@nestjs/testing": "^6.3.1",
    "@sentry/types": "^5.4.2",
    "@shelf/jest-mongodb": "^1.0.1",
    "@types/async": "^2.4.2",
    "@types/bcrypt-nodejs": "0.0.30",
    "@types/body-parser": "^1.17.0",
    "@types/compression": "0.0.33",
    "@types/connect-mongo": "0.0.32",
    "@types/dotenv": "^2.0.23",
    "@types/errorhandler": "0.0.30",
    "@types/express": "^4.16.0",
    "@types/jest": "^23.3.13",
    "@types/joi": "^14.3.3",
    "@types/lodash": "^4.14.134",
    "@types/mongodb": "^2.2.24",
    "@types/multer": "^1.3.7",
    "@types/node": "^10.12.18",
    "@types/raven": "^2.5.3",
    "@types/request": "0.0.45",
    "@types/supertest": "^2.0.7",
    "chance": "^1.0.18",
    "concurrently": "^4.1.0",
    "jest": "^23.6.0",
    "nodemon": "^1.18.9",
    "prettier": "^1.15.3",
    "supertest": "^3.4.1",
    "ts-jest": "24.0.2",
    "ts-node": "8.1.0",
    "tsconfig-paths": "3.8.0",
    "tslint": "5.16.0",
    "typescript": "3.4.3",
    "wait-on": "^3.2.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "preset": "@shelf/jest-mongodb",
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
